#:kivy 2.2.1

<InstallationStepThreeScreen>:


	MDBoxLayout:
		orientation: "vertical"
		height: root.height
		padding: dp(25), dp(25), dp(25), dp(25)
		spacing: dp(25)

		MDLabel:
			text: "Download and install Chrome"
			halign: "center"
			theme_text_color: "Custom"
    		text_color: 1, 1, 1, 1
			font_style: "H4"

		MDIcon:
			icon: "google-chrome"
			color: 1, 1, 1, 1
			pos_hint: {"center_x": 0.5, "center_y": 0.5}

		
		MDRectangleFlatButton:
			text: "Download Chrome Browser"
			md_bg_color: 0, 0, 0, 1
			pos_hint: {"center_x": 0.5, "center_y": 0.5}
			theme_text_color: "Custom"
    		text_color: "white"
			on_press:
				root.download_google_chrome()


		MDLabel:
			text: "In order to be able to properly crawl the web, you need to download and install the Google Chrome webbrowser. If Google Chrome is already installed on your machine, you can skip this step."
			halign: "center"
			theme_text_color: "Custom"
    		text_color: 1, 1, 1, 1
			font_style: "Body1"


		MDFloatLayout:

			MDBoxLayout:
				id: boxlayout_slide_points
				orientation: "horizontal"
				padding: dp(40), dp(25), dp(25), dp(25)
				spacing: dp(45)
				pos_hint: {"center_y": 0.15}

				MDIcon:
					icon: "circle-outline"
					color: 1, 1, 1, 1
					font_size : 10

				MDIcon:
					icon: "circle-outline"
					color: "#FB5302"
					font_size : 10

				MDIcon:
					icon: "circle-outline"
					color: 1, 1, 1, 1
					font_size : 10

				MDIcon:
					icon: "circle-outline"
					color: 1, 1, 1, 1
					font_size : 10

			MDRectangleFlatButton:
				text: "Back"
				md_bg_color: 0, 0, 0, 1
				pos_hint: {"center_x": 0.8, "center_y": 0.2}
				theme_text_color: "Custom"
    			text_color: "white"
				on_press:
					app.ipsm.get_screen("installationhomescreen").nav_change_to_step2_screen("installation_step_two_screen")


			MDRectangleFlatButton:
				text: "Next"
				md_bg_color: "#FB5302"
				pos_hint: {"center_x": 0.9, "center_y": 0.2}
				theme_text_color: "Custom"
    			text_color: "white"
				on_press:
					app.ipsm.get_screen("installationhomescreen").nav_change_to_step4_screen("installation_step_four_screen")
				